CC = cc
CXX = cc
CFLAGS = -Wall 
LIBS = -Llibircclient-1.6/src/ -lircclient -lpthread -Llibircclient-1.6/examples/sql/ -lsqlite3 
INCLUDES=-Ilibircclient-1.6/include -Ilibircclient-1.6/examples/sql -I/

EXAMPLES=mybotv3

all:	$(EXAMPLES)

callbk:		callbk.o
	$(CC) -o callbk callbk.o $(LIBS)


mybotv3:	mybotv3.o
	$(CC) -o mybotv3 mybotv3.o $(LIBS)


clean:
	-rm -f $(EXAMPLES) *.o *.exe

distclean: clean
	-rm -f Makefile *.log


.c.o:
	@echo "Compiling  $<"
	@$(CC) $(CFLAGS) $(INCLUDES) -c -o $@ $<

.cpp.o:
	@echo "Compiling  $<"
	@$(CXX) $(CFLAGS) $(INCLUDES) -c -o $@ $<
